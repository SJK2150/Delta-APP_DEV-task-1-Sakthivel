<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/dialogue_background">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Rules"
        android:textColor="@color/light_red"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here are the rules of the game...\n\n1. Players take turns tapping tiles.\n2. Each tap adds points to the tile.\n3. When a tile reaches 4 points, it expands to neighboring tiles.\n4. The game ends when one player controls all tiles."
        android:textColor="@color/light_blue"
        android:textSize="16sp"
        android:layout_marginTop="10dp" />
</LinearLayout>
